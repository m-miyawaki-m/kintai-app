{
  "name": "kintai-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "concurrently \"npm run emulators\" \"vite\" \"npm run seed:wait\"",
    "emulators": "npx firebase-tools emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "seed": "node scripts/seed.mjs",
    "seed:wait": "wait-on http://127.0.0.1:9099 && npm run seed",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "pinia": "^3.0.4",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "firebase-admin": "^13.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25",
    "wait-on": "^9.0.3"
  }
}
